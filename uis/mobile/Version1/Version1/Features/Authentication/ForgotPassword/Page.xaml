<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Version1.Features.Authentication.ForgotPassword.Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:syncfusionToolkit="http://schemas.syncfusion.com/maui/toolkit"
    Title="Forgot Password"
    Shell.NavBarIsVisible="False">

    <ScrollView Padding="16" Background="{x:StaticResource GradientBackground}">
        <VerticalStackLayout Spacing="8">
            <Border
                Padding="16"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="8">
                    <Label
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        MaxLines="2"
                        Text="Please provide phone number or email address" />
                    <syncfusionToolkit:SfTextInputLayout
                        ContainerType="Outlined"
                        HelperText="abc@gmail.com or +84 348164682"
                        Hint="Account"
                        InputViewPadding="14,0,0,0">
                        <Entry />
                    </syncfusionToolkit:SfTextInputLayout>
                </VerticalStackLayout>
            </Border>
            <Border
                Padding="16"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="24">
                    <Button
                        BackgroundColor="Black"
                        Command="{x:Binding SignUpCommand}"
                        Text="Request"
                        TextColor="White" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>