	  </MauiXaml>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net9.0-android'">
	  <PackageReference Include="Plugin.Maui.MauiProgressView">
	    <Version>0.0.4</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net9.0-ios'">
	  <PackageReference Include="Plugin.Maui.MauiProgressView">
	    <Version>0.0.4</Version>
	  </PackageReference>
	</ItemGroup>

</Project>
